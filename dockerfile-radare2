FROM archlinux

RUN pacman -Syu neovim git tmux sudo gcc make clang pkg-config radare2 iaito --noconfirm
RUN useradd -m -p $(perl -e 'print crypt($ARGV[0], "password")' nosiee) -s /usr/bin/bash nosiee
RUN echo "nosiee ALL=(ALL:ALL) ALL" >> /etc/sudoers

USER nosiee 
WORKDIR /home/nosiee

CMD ["tmux"]
